{
    "manifest_version": 2,
    "name": "Kryptin",
    "version": "1.0.0",
    "description": "Kryptin helps you to connect with other people who are taking same MOOCs as you.",
    "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
    "icons": {
        "128": "assets/icons/icon_128.png",
        "48": "assets/icons/icon_48.png",
        "19": "assets/icons/icon_19.png"
    },
    "browser_action": {
        "default_icon": "assets/icons/icon_19.png",
        "default_popup": "html/popup.html"
    },
    "background": {
        "scripts": ["js/jquery-3.3.1.min.js", "js/background.js"]
      },    
    "options_page": "html/options.html",
    "permissions": [
        "storage",
        "activeTab",
        "tabs",
        "notifications",
        "http://localhost:8000/*",
        "https://localhost:8000/*",
        "ws://localhost:8000/*",
        "wss://localhost:8000/*",
        "http://www.kryptin.com/*",
        "https://www.kryptin.com/*"
    ],
    "content_security_policy": "script-src 'self' https://kryptin.com; object-src 'self'",
    "content_scripts": [
        {
          "matches": ["https://www.coursera.org/learn/*", "https://www.udemy.com/*/learn/", "https://classroom.udacity.com/courses/*"],
          "js": ["js/jquery-3.3.1.min.js", "js/pageload.js"]
        }
    ]
}